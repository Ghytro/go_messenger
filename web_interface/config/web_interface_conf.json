{
    "chat_service_addr": "http://localhost:8081",
    "user_service_addr": "http://localhost:8082",
    "file_storage_service_addr": "http://localhost:8083",
    "redis_token_validation_addr": "http://localhost:6379",
    "handler_data": {
        "/get_token": {
            "name": "get_token",
            "method": "GET",
            "required_params": [
                "username",
                "password"
            ]
        },
        "/create_user": {
            "name": "create_user",
            "method": "POST",
            "required_params": [
                "email",
                "username",
                "password_md5_hash"
            ]
        },
        "/send_message": {
            "name": "send_message",
            "method": "POST",
            "required_params": [
                "token",
                "chat_id"
            ]
        },
        "/whoami": {
            "name": "whoami",
            "method": "POST",
            "required_params": [
                "token"
            ]
        }
    }
}
